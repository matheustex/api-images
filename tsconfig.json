{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "test/*": ["test/*"],
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude" : ["src/**/*.test.ts"]
}